{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "outDir": "out",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
      "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "node_modules",
    ".vscode-test",
    "**/ui/**/*",
    "**/ui/**/*",
    "*.md",
    "out/**/*",
    "regeneratePJ.ts",
    "webpack.config.ts"
  ],

  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node"
    }
  }
}
